@model LibraryManagementSystem.Models.Book

@{
    var isEdit = Model.Id != 0;
    ViewData["Title"] = isEdit ? "Edit Book" : "Create Book";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Author" class="form-label"></label>
        <input asp-for="Author" class="form-control" placeholder="Enter author name" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categoryId">
            <option value="">--Select One--</option>
          
       </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalCopies" class="form-label"></label>
        <input asp-for="TotalCopies" type="number" class="form-control" min="0" />
        <span asp-validation-for="TotalCopies" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="AvailableCopies" class="form-label"></label>
        <input asp-for="AvailableCopies" type="number" class="form-control" min="0" />
        <span asp-validation-for="AvailableCopies" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@(isEdit ? "Update" : "Save")</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
