@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h2 class="mb-3">Book List</h2>

<p>
    <a asp-action="CreateOrEdit" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Book
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>SNo</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Total Copies</th>
            <th>Available Copies</th>
            <th style="width:180px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Category</td>
                <td>@item.TotalCopies</td>
                <td>@item.AvailableCopies</td>
                <td>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this payroll?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                            <i class="bi bi-eye"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
