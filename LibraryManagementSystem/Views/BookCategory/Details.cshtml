@model LibraryManagementSystem.Models.BookCategory

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Category Name</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description ?? "N/A"</dd>

        <dt class="col-sm-3">Is Active</dt>
        <dd class="col-sm-9">@Model.IsActive ? "Yes" : "No"</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
