@model IEnumerable<LibraryManagementSystem.Models.BookApplication>

@{
    ViewData["Title"] = "Book Applications";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreateOrEdit" class="btn btn-success">
        <i class="bi bi-plus"></i> New Application
    </a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr class="text-center">
            <th>#</th>
            <th>Student Email</th>
            <th>Student ID</th>
        @*     <th>Book Title</th> *@
            <th>Status</th>
            <th>Fine Amount</th>
            <th>Issue Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@index</td>
                    <td>@item.StudentEmail</td>
                    <td>@item.StudentId</td>
               @*      <td>@item.Book?.Title</td> *@
                    <td>
                        @switch (item.Status)
                        {
                            case "Pending":
                                <span class="badge bg-warning text-dark">@item.Status</span>
                                ;
                                break;
                            case "Approved":
                                <span class="badge bg-success">@item.Status</span>
                                ;
                                break;
                            case "Rejected":
                                <span class="badge bg-danger">@item.Status</span>
                                ;
                                break;
                        }
                    </td>
                    <td>@item.FineAmount.ToString("C")</td>
                    <td>@item.IssueDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.ReturnDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this payroll?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                <i class="bi bi-eye"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No book applications found.</td>
            </tr>
        }
    </tbody>
</table>
